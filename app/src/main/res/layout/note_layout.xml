                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="20sp"
                android:hint="Your Text jsfjsehnfrsehn vujshnejgh jhnsgvjkearhnjfhnjkhngjksgk dghsjkadhngjksghjherjh SRgaerfgedrgnguh"/>

        </RelativeLayout>



